// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Lesson {
  id String @id @default(uuid())

  title String
  // estou falando que a description vai ser opcional
  description String?
}
